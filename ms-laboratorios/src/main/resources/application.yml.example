server:
  port: 8082

spring:
  application:
    name: ms-laboratorios

  datasource:
    # Configuraci칩n Oracle Cloud ATP - fs3
    # IMPORTANTE: Configure las siguientes variables de entorno antes de ejecutar:
    # - DB_TNS_NAME: Nombre del servicio TNS (ej: fs3_tp)
    # - TNS_ADMIN_PATH: Ruta al directorio del wallet Oracle (ej: ./wallet o ruta absoluta)
    # - DB_USERNAME: Usuario de base de datos (ej: ADMIN)
    # - DB_PASSWORD: Contrase침a de base de datos (NUNCA versionar en git)
    url: jdbc:oracle:thin:@${DB_TNS_NAME:fs3_tp}?TNS_ADMIN=${TNS_ADMIN_PATH:./wallet}
    username: ${DB_USERNAME:ADMIN}
    password: ${DB_PASSWORD}
    driver-class-name: oracle.jdbc.OracleDriver

  jpa:
    hibernate:
      # update: actualiza el schema autom치ticamente
      # Temporalmente cambiado para crear tablas faltantes
      ddl-auto: update
    properties:
      hibernate:
        dialect: org.hibernate.dialect.OracleDialect
        format_sql: true
    # Evita lazy loading fuera de transacci칩n
    open-in-view: false
    show-sql: false

  flyway:
    enabled: true
    locations: classpath:db/migration
    baseline-on-migrate: true
    baseline-version: 0
    validate-on-migrate: false

logging:
  level:
    com.sumativa.ms_laboratorios: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE
